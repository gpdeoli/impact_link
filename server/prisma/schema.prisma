// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserPlan {
  SOLO
  AGENCY
}

enum LinkType {
  BIO
  STORY
  DIRECT
  CAMPANHA
  PRODUTO
  OTHER
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String
  plan          UserPlan  @default(SOLO)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Agency relationships
  agencyId      String?   // If null, user is agency owner or solo
  agency        Agency?   @relation("AgencyMembers", fields: [agencyId], references: [id])
  
  // Agency owner
  agencyOwner   Agency?   @relation("AgencyOwner")

  links         Link[]
  clicks        Click[]
  campaigns     Campaign[]
  clients       Client[]
}

model Agency {
  id            String    @id @default(cuid())
  name          String
  ownerId       String    @unique
  owner         User      @relation("AgencyOwner", fields: [ownerId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  members       User[]    @relation("AgencyMembers")
  clients       Client[]
}

model Client {
  id            String    @id @default(cuid())
  name          String
  email         String?
  userId        String
  agencyId      String?
  user          User      @relation(fields: [userId], references: [id])
  agency        Agency?   @relation(fields: [agencyId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  links         Link[]
  campaigns     Campaign[]
}

model Link {
  id            String    @id @default(cuid())
  shortCode     String    @unique
  originalUrl   String
  title         String?
  description   String?
  linkType      LinkType  @default(OTHER)
  tags          String[]  @default([])
  
  userId        String
  clientId      String?
  campaignId    String?
  
  user          User      @relation(fields: [userId], references: [id])
  client        Client?   @relation(fields: [clientId], references: [id])
  campaign      Campaign? @relation(fields: [campaignId], references: [id])
  
  isActive      Boolean   @default(true)
  expiresAt     DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  clicks        Click[]
  
  @@index([userId])
  @@index([shortCode])
  @@index([clientId])
  @@index([campaignId])
}

model Campaign {
  id            String    @id @default(cuid())
  name          String
  description   String?
  startDate     DateTime
  endDate       DateTime?
  userId        String
  clientId      String?
  
  user          User      @relation(fields: [userId], references: [id])
  client        Client?   @relation(fields: [clientId], references: [id])
  
  links         Link[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
  @@index([clientId])
}

model Click {
  id            String    @id @default(cuid())
  linkId        String
  userId        String
  
  link          Link      @relation(fields: [linkId], references: [id])
  user          User      @relation(fields: [userId], references: [id])
  
  // Tracking data
  referrer      String?
  userAgent     String?
  device        String?
  browser       String?
  os            String?
  country       String?
  city          String?
  ip            String?
  
  createdAt     DateTime  @default(now())

  @@index([linkId])
  @@index([userId])
  @@index([createdAt])
}

